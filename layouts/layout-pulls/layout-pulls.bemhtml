block('layout-pulls')(

    js()(true),

    content()(function() {
        return {
            block: 'pulls-list',
            items: this.ctx.items.map(function(item) {
                return {
                    title: item.title,
                    body: item.body,
                    date: item.updated_at
                };
            })
        };
    })

);
